<%= simple_form_for(user, html: { class: 'apply-form' }) do |f| %>
  <%= f.input :first_name, label: 'FIRST NAME', placeholder: 'MAX', wrapper_html:{ class: 'apply-field'} %>

  <%= f.input :last_name, label: 'LAST NAME', placeholder: 'MUSTERMANN', wrapper_html:{ class: 'apply-field'} %>

  <%= f.input :email, label: 'EMAIL', placeholder: 'MAX@GMAIL.DE', wrapper_html:{ class: 'apply-field'} %>

  <div class="apply-field d-flex">
    <%= f.input :phone_code, label: 'CODE', wrapper_html:{ class: 'phone code'} %>

    <%= f.input :phone_number, label: 'PHONENUMBER', placeholder: '1682857925', wrapper_html:{ class: 'phone number'} %>
  </div>

  <%= f.input :dob, as: :date, order: [:day, :month, :year], start_year: Date.today.year - 70, end_year: Date.today.year - 18, label: 'WHEN WERE YOU BORN?', wrapper_html:{ class: 'apply-field'} %>

  <%= f.input :job, label: 'WHAT DO YOU DO FOR LIVING?', placeholder: 'YOUR JOB TITLE', wrapper_html:{ class: 'apply-field'} %>

  <%= f.input :move_in, as: :date, order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year + 1, label: 'WHEN DO YOU WANT TO MOVE IN?', wrapper_html:{ class: 'apply-field'} %>

  <%= f.input :move_out, as: :date, order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year + 1, label: 'UNTIL WHEN ARE YOU PLANING TO STAY?', wrapper_html:{ class: 'apply-field'} %>


  <div class="apply-field">
    <%= f.label :gender, label: 'WHAT IS YOUR GENDER?' %>
    <div class="check-boxes only-one-box"><%= f.collection_check_boxes :gender, [['Male'], ['Female'], ['Other']], :first, :first, multiple: false %></div>
  </div>

  <div class="apply-field">
    <%= f.label :prefered_suite, 'WHAT SUITE DO YOU PREFER?' %>
    <div class="check-boxes"><%= f.collection_check_boxes :prefered_suite, [['Mighty'], ['Premium'], ['Jumbo']], :first, :last, checked: false %></div>
  </div>

  <%= f.input :amount_of_people, as: :select, collection: [['YES', 2],['NO', 1]], selected: 1, wrapper_html:{ class: 'apply-field'}, include_blank: false, label: 'AS A COUPLE?' %>

  <div class="social-media apply-field">
    <%= f.label :social_media, 'SHARE MORE ABOUT YOU' %>
    <div class="check-boxes">
      <i class="fab fa-linkedin" aria-hidden="true"></i>
      <i class="fab fa-twitter" aria-hidden="true"></i>
      <i class="fab fa-instagram" aria-hidden="true"></i>
      <i class="fab fa-facebook" aria-hidden="true"></i>
    </div>
    <%= f.input :linkedin, label: 'ARE YOU ON LINKEDIN?', wrapper_html: { class: 'd-none' } %>
    <%= f.input :twitter, label: 'ARE YOU ON TWITTER?', wrapper_html: { class: 'd-none' } %>
    <%= f.input :instagram, label: 'ARE YOU ON INSTAGRAM?', wrapper_html: { class: 'd-none' } %>
    <%= f.input :facebook, label: 'ARE YOU ON FACEBOOK?', wrapper_html: { class: 'd-none' } %>
  </div>

  <div class="form-action">
    <%= f.submit 'APPLY', class: 'stacey-button apply-button' %>
  </div>
<% end %>
